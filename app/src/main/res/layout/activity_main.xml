<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TextView to display the notification access status -->
    <TextView
        android:id="@+id/tvNotificationStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checking_notification_access"
        android:textSize="18sp" />

    <!-- Button to navigate the user to enable notification access -->
    <Button
        android:id="@+id/btnEnableNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enable_notification_access" />

</LinearLayout>
